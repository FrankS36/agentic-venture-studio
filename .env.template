# =============================================================================
# Multi-Agent Venture Studio Configuration
# =============================================================================

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096

# Reddit API Configuration
# Get these credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=agentic-venture-studio/1.0 (by /u/yourusername)

# Optional: Reddit Username/Password for authenticated requests
# (Not required for public data access)
REDDIT_USERNAME=
REDDIT_PASSWORD=

# Twitter/X API Configuration (for future integration)
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# OpenAI API Configuration (optional, for advanced NLP)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Database Configuration
DATABASE_PATH=data/venture_studio.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false
DB_AUTO_BACKUP=true
DB_BACKUP_INTERVAL=24

# API Rate Limiting
REDDIT_REQUESTS_PER_MINUTE=60
REDDIT_BURST_REQUESTS=10
CLAUDE_REQUESTS_PER_MINUTE=50
OPENAI_REQUESTS_PER_MINUTE=60

# Signal Discovery Configuration
REDDIT_DEFAULT_SUBREDDITS=entrepreneur,startups,SaaS,digitalnomad,business,SmallBusiness
REDDIT_MIN_SCORE=10
REDDIT_MIN_COMMENTS=5
REDDIT_SEARCH_LIMIT=25

# Agent Configuration
ENABLE_CLAUDE_AGENT=true
ENABLE_REDDIT_SCOUT=true
ENABLE_TWITTER_SCOUT=false
ENABLE_THESIS_SYNTHESIZER=true

# Scoring Thresholds
MIN_OPPORTUNITY_SCORE=0.3
MIN_ENGAGEMENT_SCORE=0.2
MIN_FINAL_SCORE=0.4

# Streamlit Dashboard Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
DASHBOARD_REFRESH_INTERVAL=300
ENABLE_AUTO_DISCOVERY=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/venture_studio.log
ENABLE_FILE_LOGGING=true

# Security Configuration
SECRET_KEY=your_secret_key_here_change_this_in_production
SESSION_TIMEOUT=3600

# =============================================================================
